<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.instagramportfolio.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_slideFragment"
            app:destination="@id/slideFragment" />
    </fragment>
    <fragment
        android:id="@+id/slideFragment"
        android:name="com.android.instagramportfolio.view.slide.SlideFragment"
        android:label="SlideFragment"
        tools:layout="@layout/fragment_slide" >
        <action
            android:id="@+id/action_slideFragment_to_previewFragment"
            app:destination="@id/previewFragment" />
    </fragment>
    <fragment
        android:id="@+id/previewFragment"
        android:name="com.android.instagramportfolio.view.preview.PreviewFragment"
        android:label="PreviewFragment"
        tools:layout="@layout/fragment_preview" />
</navigation>