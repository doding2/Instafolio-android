<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--    Slide Before    -->
        <FrameLayout
            android:id="@+id/layout_before"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:foreground="@drawable/border_without_right">

                <ImageView
                    android:id="@+id/image_slide_before"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top|end"
                android:background="@color/purple_200"/>

            <View
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|end"
                android:background="@color/purple_200"/>
        </FrameLayout>

        <!--    Slide Origin    -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp">

            <View
                android:id="@+id/border_connect_start_top"
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top|start"
                android:background="@color/purple_200"
                android:visibility="gone"/>

            <View
                android:id="@+id/border_connect_start_bottom"
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|start"
                android:background="@color/purple_200"
                android:visibility="gone"/>


            <FrameLayout
                android:id="@+id/wrapper_border_image_slide"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_slide"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <View
                android:id="@+id/border_connect_end_top"
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top|end"
                android:background="@color/purple_200"
                android:visibility="gone"/>

            <View
                android:id="@+id/border_connect_end_bottom"
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|end"
                android:background="@color/purple_200"
                android:visibility="gone"/>
        </FrameLayout>

        <!--    Slide After    -->
        <FrameLayout
            android:id="@+id/layout_after"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top|start"
                android:background="@color/purple_200"/>

            <View
                android:layout_width="5dp"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom|start"
                android:background="@color/purple_200"/>

            <FrameLayout
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:foreground="@drawable/border_without_left">

                <ImageView
                    android:id="@+id/image_slide_after"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</layout>