<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.instafolioo.instagramportfolio.view.instagram.upload.InstagramUploadViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.instagram.upload.InstagramUploadFragment">

            <ImageView
                android:id="@+id/button_upload"
                android:theme="@android:style/ThemeOverlay.Material.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/icon_arrow_forward"
                app:tint="@color/black"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@={viewModel.content}"
                android:hint="문구 입력..."
                android:inputType="textMultiLine" />
        </LinearLayout>

        <include
            layout="@layout/layout_loading"
            android:id="@+id/layout_loading"
            android:visibility="gone" />
    </FrameLayout>
</layout>