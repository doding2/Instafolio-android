<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            tools:context=".view.slide.SlideFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="26dp"
                    android:paddingEnd="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_back_arrow"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Instafolio"
                    android:textSize="17.32sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sebang_gothic_bold"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/button_navigate_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="26dp"
                    android:src="@drawable/icon_forward_arrow"
                    android:theme="@android:style/ThemeOverlay.Material.Dark"
                    app:tint="@color/white" />
            </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_preview_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/layout_binding"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/image_binding_preview_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/image_binding_preview_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/button_insta_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginStart="7dp"
                        android:orientation="vertical"
                        app:tint="@color/button_disabled_slide_color"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_insta_size_upper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_insta_size_upper"
                            app:tint="@color/button_disabled_slide_color"/>

                        <ImageView
                            android:id="@+id/image_insta_size_1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_insta_size_1_1"
                            android:layout_marginEnd="0.4dp"
                            android:layout_marginVertical="2dp"
                            app:tint="@color/button_disabled_slide_color"/>

                        <ImageView
                            android:id="@+id/image_insta_size_lower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_insta_size_lower"
                            app:tint="@color/button_disabled_slide_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/button_binding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_binding"
                        app:tint="@color/button_disabled_slide_color"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/button_tooltip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/icon_tooltip"
                        app:tint="@color/button_disabled_slide_color"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_slide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        app:spanCount="4"/>

                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:src="@drawable/effect_black_lower_screen"
                        android:scaleType="fitXY"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/layout_loading"
            android:id="@+id/layout_loading"
            android:visibility="gone"/>

    </FrameLayout>
</layout>